{
	"path": {
		"src": "src",
		"dst": "lib"
	},

	"projects": [
		{
			"name": "alumican",
			"ts": [{ "src": "index", "dst": "index", "watch": "**/*.ts" }]
		},
		{
			"name": "alumican.jquery",
			"ts": [{ "src": "index", "dst": "index", "watch": "**/*.ts" }]
		},
		{
			"name": "alumican.drawer",
			"ts": [{ "src": "index", "dst": "index", "watch": "**/*.ts" }],
			"scss": [{ "src": "index", "dst": "index", "watch": "**/*.scss" }]
		},
		{
			"name": "alumican.slideshow",
			"ts": [{ "src": "index", "dst": "index", "watch": "**/*.ts" }],
			"scss": [{ "src": "index", "dst": "index", "watch": "**/*.scss" }]
		},
		{
			"name": "alumican.unlock_gesture",
			"ts": [{ "src": "index", "dst": "index", "watch": "**/*.ts" }]
		},
		{
			"name": "alumican.canvas",
			"ts": [{ "src": "index", "dst": "index", "watch": "**/*.ts" }]
		},
		{
			"name": "alumican.canvas.pixi",
			"ts": [{ "src": "index", "dst": "index", "watch": "**/*.ts" }]
		},
		{
			"name": "alumican.canvas.paper",
			"ts": [{ "src": "index", "dst": "index", "watch": "**/*.ts" }]
		},
		{
			"name": "alumican.three",
			"ts": [{ "src": "index", "dst": "index", "watch": "**/*.ts" }]
		},
		{
			"name": "alumican.googlemaps",
			"ts": [{ "src": "index", "dst": "index", "watch": "**/*.ts" }]
		},
		{
			"name": "alumican.audioplayer",
			"ts": [{ "src": "index", "dst": "index", "watch": "**/*.ts" }]
		},
		{
			"name": "alumican.videoplayer",
			"ts": [{ "src": "index", "dst": "index", "watch": "**/*.ts" }],
			"scss": [{ "src": "index", "dst": "index", "watch": "**/*.scss" }]
		},
		{
			"name": "alumican.multitouch",
			"ts": [{ "src": "index", "dst": "index", "watch": "**/*.ts" }]
		}
	],

	"typeScriptOptions": {
		"target": "es6",
		"lib": ["es2015", "dom"],
		"types": ["jquery", "webvr-api"],
		"typeRoots": [
			"src/@types",
			"lib"
		],
		"forceConsistentCasingInFileNames": true,
		"alwaysStrict": false,
		"removeComments": true,
		"sourceMap": true,
		"minify": true,
		"minifyOnly": false,
		"declaration": true
	},

	"sassOptions": {
		"sourceMap": true,
		"minify": true,
		"minifyOnly": false
	},

	"autoprefixerOptions": {
		"env": "production",
		"browsers": [
			"last 2 versions",
			"ie >= 11",
			"Android >= 4"
		],
		"cascade": false,
		"grid": true
	}
}
