{
  "compilerOptions": {
    "target": "ES5",
    "lib": [
      "es6",
      "dom"
    ],
    "types": [
      "jquery",
      "paper",
      "pixi.js",
      "three",
      "d3",
      "modernizr",
      "dat.gui",
      "stats.js"
